<%= render 'partial/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- vertical-navbar -->
      <%= render 'partial/verticalnavbar' %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">基本データの編集</div>
        <div class="panel-body">
          <%= form_for @listing do |f| %>
					<div class="form-group">
           <%= f.label :お家の種類 %><br>
           <%= f.select :home_type, options_for_select([["一軒家","一軒家"],["マンション","マンション"],["アパート","アパート"]]),{prompt:"選択してください", required: true} ,{class:'form-control'} %>
         	</div>
					<div class="form-group">
					 <%= f.label :ペットの種類 %><br>
					 <%= f.select :pet_type, options_for_select([["犬","犬"],["猫","猫"],["鳥類","鳥類"],["爬虫類","爬虫類"],["魚類","魚類"],["両生類","両生類"],["その他","その他"]]),{prompt:"選択してください",required: true},{class:'form-control'} %>
					</div>
					<div class="form-group">
					 <%= f.label :ペットの飼育歴 %><br>
					 <%= f.select :breeding_years, options_for_select([["1年","1"],["2年","2"],["3年","3"],["4年","4"],["5年","5"],["6年以上","6"]]),{prompt:"選択してください",required: true},{class:'form-control'} %>
					</div>
					<div class="form-group">
					 <%= f.label :ペットのサイズ %><br>
					 <%= f.select :pet_size, options_for_select([["小型","小型"],["中型","中型"],["大型","大型"],["超大型","超大型"]]),{prompt:"選択してください",required: true},{class:'form-control'} %>
					</div>
					<div class="actions">
						<%= f.submit "保存する",class:"btn btn-primary" %>
					</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
